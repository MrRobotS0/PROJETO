<div class="dropdown">
    <a class="btn minhacorr dropdown-toggle text-white" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown"
        aria-expanded="false">
        Itens
    </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>

                <a class="dropdown-item" asp-controller="Item" asp-action="List"
                    asp-route-categoria="@categoria.Nome">@categoria.Nome</a>

            </li>
        }
        <li class="dropdown-divider"></li>
        <li>

            <a class="dropdown-item" asp-controller="Item" asp- action="List" asp-route-categoria=""
                >Todos os Itens</a>
        </li>
    </ul>
</div>