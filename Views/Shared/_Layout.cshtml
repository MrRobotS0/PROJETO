<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROJETO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROJETO.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>

<body class="minhacorr">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow minhacor">
            <div class="container ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img
                        src="~/imagens/1.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                            }
                        </li>
                        <li>
                            @await Component.InvokeAsync("CategoriaMenu")
                        </li>
                        <li class="nav-item ms-auto">
                            <form class="navbar-form navbar-right" asp-controller="Item" asp-action="Search"
                                method="get">
                                <div class="form-group d-flex justify-content-end">
                                    <input type="text" class="form-control" placeholder="Procurar lanche"
                                        name="searchString" value="@ViewData["searchString"]">
                                    <button class="minhacorr"><i class="bi bi-search text-white"></i></button>
                                </div>
                            </form>
                        </li>
                        <li>
                            @await Component.InvokeAsync("CarrinhoResumo")
                        </li>
                        <li>
                            @await Html.PartialAsync("_Login")
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="minhacorr pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="tamanhobaixo"></div>
    <footer>
        <div class="container-fluid minhacor p-4 text-white fixed-bottom">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-telephone h1 me-3"></i>
                            <h4>Telefone</h4>
                        </div>
                        <h4>Tel: (18) 99999-9999</h4>
                    </div>
                    <div class="col d-flex justify-content-end align-items-center">
                        <i class="bi bi-twitter h1 me-3"></i>
                        <i class="bi bi-facebook h1 me-3"></i>
                        <i class="bi bi-instagram h1"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>